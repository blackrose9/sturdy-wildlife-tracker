{{#partial "active"}}
    <ul class="nav nav-tabs">
        <li role="presentation"><a href="/">Home</a></li>
        <li role="presentation"><a href="/record_animal/new">New Animal</a></li>
        <li role="presentation" class="active"><a href="/record_sighting/new">Record Sighting</a></li>
        <li role="presentation"><a href="/view_sightings">View Sightings</a></li>
    </ul>
{{/partial}}

{{#partial "content"}}
    <form action="/record_sighting" method="post" class="input-group form-text">
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" id="name" name="name" type="text" required>
        </div>

        <div class="form-group">
            <label for="name">Health</label>
            <select class="form-control" id="name" name="name">
                {{#if animals}}
                    {{#each animals}}
                        <option value="{{name}}">{{type}} - {{name}}</option>
                    {{/each}}
                {{/if}}
            </select>
        </div>

        <div class="form-group">
            <label for="location">Location</label>
            <input class="form-control" id="location" name="location" type="text" placeholder="Please enter a detailed description of where animal was sighted" required>
        </div>

        <div class="form-group">
            <label for="ranger">Ranger's Name</label>
            <input class="form-control" id="ranger" name="ranger" type="text" required>
        </div>

        <br>
        <br>
        <button type="submit" class="btn btn-outline-secondary">Add Sighting</button>
    </form>
{{/partial}}
{{> layout.hbs}}